{% extends 'master' %}
{% block content %}
<div class="photo-page">
  <header class="photos-header">
    <div class="container">
      <button class='photos-header__button'>
        <span class="photos-header__button--btn fa fa-plus-circle"></span>
      </button>
    </div>
  </header>
  <section class="form">
    <div class="container">
      <form action="/photos" method='POST' placeholder='Image URL' class="new-pic-form"></form>
        <div class="form-input">
          <input type="text" class="photo-url">
        </div>
        <div class="form-input">
          <textarea class='photo-description' placeholder='Image Caption' rows="8" cols="40"></textarea>
        </div>
    </div>
  </section>

  <main class="photos">
    <div class="container">
      <div class="row">
        <div class="row__item photo-box">
          <div class="photo-box__image">
            <img class="photo-box__image--img" src="http://placecage.com/200/200"></img>
          </div>
          <div class="photo-box__description">
            <p class="photo-box__description--text">
              description
            </p>
          </div>
        </div>
        <div class="row__item photo-box">
          <div class="photo-box__image">
            <img class="photo-box__image--img" src="http://placecage.com/200/100"></img>
          </div>
          <div class="photo-box__description">
            <p class="photo-box__description--text">
              description
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
{% endblock %}
